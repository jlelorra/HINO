<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/selectPathLayout" >
    
  
      <Switch
         android:id="@+id/switch1"
         android:layout_width="90dp"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/lbl_setdelay"
         android:layout_below="@+id/lbl_setdelay"
         android:layout_marginTop="80dp"
         android:layout_marginLeft="5dp"
         android:textOff="+"
         android:textOn="-" />

     <NumberPicker
         android:id="@+id/timePicker1"
         android:layout_width="50dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/lbl_setdelay"
         android:layout_marginLeft="15dp"
         android:layout_marginTop="15dp"
         android:layout_toRightOf="@+id/switch1"/>
     
     <NumberPicker
         android:id="@+id/timePicker2"
         android:layout_width="50dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/lbl_setdelay"
         android:layout_marginLeft="25dp"
         android:layout_marginTop="15dp"
         android:layout_toRightOf="@+id/timePicker1"/>
          
     <NumberPicker
         android:id="@+id/timePicker3"
         android:layout_width="50dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/lbl_setdelay"
         android:layout_marginLeft="2dp"
         android:layout_marginTop="15dp"
         android:layout_toRightOf="@+id/timePicker2"/>
               
     <NumberPicker
         android:id="@+id/timePicker4"
         android:layout_width="50dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/lbl_setdelay"
         android:layout_marginTop="15dp"
         android:layout_marginLeft="2dp"
         android:layout_toRightOf="@+id/timePicker3"/>
     
  
    <TextView
        android:id="@+id/lbl_Chooseavideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:text="Choisissez une video : "/>

    <TextView
        android:id="@+id/pathvideo"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/lbl_Chooseavideo"
        android:layout_below="@+id/lbl_Chooseavideo"
        android:ems="10" />
        
     <Button
        android:id="@+id/btn_video"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/lbl_Chooseavideo"
        android:text="Parcourir"
        android:ems="10" />
     

     <TextView
         android:id="@+id/lbl_Choosesrt"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:layout_marginTop="5dp"
         android:layout_toRightOf="@+id/btn_video"
         android:ems="10"
         android:text="les sous titres : " />

    <TextView
        android:id="@+id/pathsrt"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/lbl_Choosesrt"
        android:layout_below="@+id/lbl_Choosesrt"
        android:ems="10" />
        
     <Button
        android:id="@+id/btn_srt"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/lbl_Choosesrt"
        android:text="Parcourir"
        android:ems="10" />

     
      <TextView 
        android:id="@+id/lbl_setdelay" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_alignLeft="@+id/pathvideo" 
        android:layout_below="@+id/pathsrt"
        android:ems="10" 
        android:text="Choisissez le décalage : "/>



     <TextView
         android:id="@+id/lbl_second"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/switch1"
         android:layout_toRightOf="@+id/timePicker1"
         android:layout_marginBottom="3dp"
         android:layout_marginLeft="5dp"
         android:ems="10"
         android:text="(s)" />
     
          <TextView
         android:id="@+id/lbl_millisecond"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/switch1"
         android:layout_toRightOf="@+id/timePicker4"
         android:layout_marginBottom="3dp"
         android:layout_marginLeft="5dp"
         android:ems="10"
         android:text="(ms)" />
     
      <Button
        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:text="Aller à VLC"
        android:ems="10" />
       
</RelativeLayout>


