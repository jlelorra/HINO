<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/selectPathLayout" >
    
    <TextView 
        android:id="@+id/lbl_Chooseavideo" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="5dp" 
        android:layout_marginLeft="10dp" 
        android:ems="10" 
        android:text="Please select a video :"/>

    <TextView
        android:id="@+id/pathvideo"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/lbl_Chooseavideo"
        android:layout_below="@+id/lbl_Chooseavideo"
        android:ems="10" />
        
     <Button
        android:id="@+id/btn_video"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pathvideo"
        android:layout_alignBottom="@+id/pathvideo"
        android:layout_alignTop="@+id/pathvideo"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/lbl_Chooseavideo"
        android:text="Browse"
        android:ems="10" />
     
     <TextView 
        android:id="@+id/lbl_Choosesrt" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_alignLeft="@+id/pathvideo" 
        android:layout_below="@+id/pathvideo"
        android:layout_marginTop="50dp" 
        android:ems="10" 
        android:text="Please select a srt file :"/>

    <TextView
        android:id="@+id/pathsrt"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/lbl_Choosesrt"
        android:layout_below="@+id/lbl_Choosesrt"
        android:ems="10" />
        
     <Button
        android:id="@+id/btn_srt"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pathsrt"
        android:layout_alignBottom="@+id/pathsrt"
        android:layout_alignTop="@+id/pathsrt"
        android:layout_below="@+id/lbl_Choosesrt"
        android:layout_marginLeft="20dp"
        android:text="Browse"
        android:ems="10" />
     
     
      <TextView 
        android:id="@+id/lbl_setdelay" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_alignLeft="@+id/pathvideo" 
        android:layout_below="@+id/pathsrt"
        android:layout_marginTop="30dp" 
        android:ems="10" 
        android:text="Please set the delay :"/>

     <Switch
         android:id="@+id/switch1"
         android:layout_width="90dp"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/lbl_setdelay"
         android:layout_below="@+id/lbl_setdelay"
         android:layout_marginTop="80dp"
         android:layout_marginLeft="20dp"
         android:textOff="+"
         android:textOn="-" />

     <NumberPicker
         android:id="@+id/timePicker1"
         android:layout_width="90dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/lbl_setdelay"
         android:layout_marginLeft="15dp"
         android:layout_marginTop="10dp"
         android:layout_toLeftOf="@+id/btn_srt"
         android:layout_toRightOf="@+id/switch1"/>

     <TextView
         android:id="@+id/lbl_second"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/switch1"
         android:layout_toRightOf="@+id/timePicker1"
         android:layout_marginBottom="3dp"
         android:layout_marginLeft="5dp"
         android:ems="10"
         android:text="Second(s)" />
     
      <Button
        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:text="Test"
        android:ems="10" />
       
</RelativeLayout>
